                            </div>
                            <div id="user2">
                                <div id="tag">
                                    <div id="id">
                                        <p>ATECH-T003</p>
                                    </div>
                                    <div id="status" class="active">
                                        <p>Autorizado e Presente</p>
                                        <i class="fa-solid fa-circle"></i>
                                    </div>
                                </div>
                                <div id="name">
                                    <p>Pedro Rezende</p>
                                </div>
                                <div id="tracking">
                                    <h1>Tempo no Ambiente</h1>
                                    <p>00:45:12</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
