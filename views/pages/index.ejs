    <title>Test</title>
</head>
<body>
    <div id="all-content">
        <div id="device-management">
            <div id="date-and-time">
                <div id="time">
                    <p>00:00</p>
                </div>
                <div id="date">
                    <p>Dia da Semana</p>
                    <p><span>Dia</span> de <span>Mês</span> de <span>Ano</span></p>
                </div>
            </div>
            <div id="devices">
                <div id="dev1">
                    <a href=""></a>
                </div>
            </div>
            <div id="add-new">
                <a href="">
                    <i class="fa-solid fa-circle-plus"></i>
                </a>
                <p>Adicionar Novo Dispositivo</p>
            </div>
        </div>
        <div id="main-area">
            <div id="navigation">
                <div id="nav">
                    <div id="links">
                        <p>
                            <a href="" id="dashboard">
                                Dashboard
                            </a>
                        </p>
                        <p>
                            <a href="" id="registros">
                                Registros
                            </a>
                        </p>
                    </div>
                    <p>Bem vindo de volta, <span>Fernando!</span></p>
                </div>
                <div id="available1">
                    <div id="current"></div>
                </div>
            </div>
            <div id="content">
                <div id="tags-beacon">
                    <div id="area">
                        <a href="" id="area1">
                            <h1>Área 1</h1>
                        </a>
                    </div>
                    <div id="available2">
                        <div id="current"></div>
                    </div>
                    <div id="tags">
                        <div id="device1">
                            <div id="technical-info">
                                <div id="status">
                                    <i class="fa-solid fa-circle inactive"></i>
                                </div>
                                <div id="name">
                                    <p>ATECH-T001</p>
                                </div>
                            </div>
                            <div id="user">
                                <p>Vinícius S.</p>
                            </div>
                        </div>
                        <div id="device2">
                            <div id="technical-info">
                                <div id="status">
                                    <i class="active fa-solid fa-circle"></i>
                                </div>
                                <div id="name">
                                    <p>ATECH-T002</p>
                                </div>
                            </div>
                            <div id="user">
                                <p>Raíssa S.</p>
                            </div>
                        </div>
                        <div id="device3">
                            <div id="technical-info">
                                <div id="status">
                                    <i class="active fa-solid fa-circle"></i>
                                </div>
                                <div id="name">
                                    <p>ATECH-T003</p>
                                </div>
                            </div>
                            <div id="user">
                                <p>Pedro R.</p>
                            </div>
                        </div>
                    </div>
                    <div id="available2">
                        <div id="current"></div>
                    </div>
                    <div id="update">
                        <div id="map">
                            <h1>Ambiente</h1>
                            <img src="images/blueprint.png" alt="Planta Baixa com localizações dos usuários">
                            <h1>Última atualização: <span>08/11/2022 23:29</span></h1>
                        </div>
                        <div id="beacons">
                            <h1>Receptores</h1>
                            <div id="devices">
                                <div id="device1">
                                    <div id="name">
                                        <p>ATECH-B001</p>
                                    </div>
                                    <div id="status" class="active">
                                        <i class="fa-solid fa-circle"></i>
                                        <p>Operando</p>
                                    </div>
                                    <div id="charge">
                                        <i class="fa-solid fa-battery-full"></i>
                                        <p class="high">100%</p>
                                    </div>
                                </div>
                                <div id="device2">
                                    <div id="name">
                                        <p>ATECH-B002</p>
                                    </div>
                                    <div id="status" class="active">
                                        <i class="fa-solid fa-circle"></i>
                                        <p>Operando</p>
                                    </div>
                                    <div id="charge">
                                        <i class="fa-solid fa-battery-full"></i>
                                        <p class="medium">50%</p>
                                    </div>
                                </div>
                                <div id="device3">
                                    <div id="name">
                                        <p>ATECH-B003</p>
                                    </div>
                                    <div id="status" class="inactive">
                                        <i class="fa-solid fa-circle"></i>
                                        <p>Falha</p>
                                    </div>
                                    <div id="charge">
                                        <i class="fa-solid fa-battery-full"></i>
                                        <p class="low">0%</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="cards">
                        <div id="ativos">
                            <h1>Ativos</h1>
                            <div id="content">
                                <div id="btn-views">
                                    <input type="button" value="A" class="high">
                                    <input type="button" value="D">
                                    <input type="button" value="S">
                                    <input type="button" value="M">
                                </div>
                                <div id="text">
                                    <p><span>Agora,</span> há</p>
                                    <p><span>2 ativos,</span> presentes</p>
                                    <p><span>no ambiente.</span></p>
                                </div>
                            </div>
                        </div>
                        <div id="temperatura">
                            <h1>Temperatura</h1>
                            <div id="content">
                                <div id="btn-views">
                                    <input type="button" value="A">
                                    <input type="button" class="high" value="D">
                                    <input type="button" value="S">
                                    <input type="button" value="M">
                                </div>
                                <div id="text">
                                    <p><span>Ontem,</span> a temperatura</p>
                                    <p>média foi de <span>22 ºC</span></p>
                                    <p><span>no ambiente.</span></p>
                                </div>
                            </div>
                        </div>
                        <div id="tempo">
                            <h1>Tempo</h1>
                            <div id="content">
                                <div id="btn-views">
                                    <input type="button" value="A">
                                    <input type="button" value="D">
                                    <input type="button" value="S" class="high">
                                    <input type="button" value="M">
                                </div>
                                <div id="text">
                                    <p><span>Semanalmente,</span> foram</p>
                                    <p>acumuladas <span>120h</span></p>
                                    <p><span>no ambiente.</span></p>
                                </div>
                            </div>
                        </div>
                        <div id="falhas">
                            <h1>Falhas</h1>
                            <div id="content">
                                <div id="btn-views">
                                    <input type="button" value="A">
                                    <input type="button" value="D">
                                    <input type="button" value="S">
                                    <input type="button" class="high" value="M">
                                </div>
                                <div id="text">
                                    <p><span>Mensalmente,</span> houveram</p>
                                    <p><span>7 falhas</span> nos receptores</p>
                                    <p><span>do ambiente.</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="gradient"></div>
                <div id="tracking-info">
                    <div id="wifi">
                        <h1>Conexão Wi-fi</h1>
                        <div id="connect">
                            <i class="fa-solid fa-wifi"></i>
                            <p>Atech-Wifi</p>
                            <i class="fa-solid fa-circle-chevron-down"></i>
                        </div>
                    </div>
                    <div id="flux">
                        <h1>Fluxo Diário</h1>
                        <div id="users">
                            <div id="user1">
                                <div id="tag">
                                    <div id="id">
                                        <p>ATECH-T002</p>
                                    </div>
                                    <div id="status" class="active">
                                        <p>Autorizado e Presente</p>
                                        <i class="fa-solid fa-circle"></i>
                                    </div>
                                </div>
                                <div id="name">
                                    <p>Raíssa Sabino</p>
                                </div>
                                <div id="tracking">
                                    <h1>Tempo no Ambiente</h1>
                                    <p>00:45:03</p>
